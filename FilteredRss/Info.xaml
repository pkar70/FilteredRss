<Page
    x:Class="FilteredRss.Info"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FilteredRss"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="uiInfoGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" SizeChanged="OnSizeChanged">
        <WebView x:Name="uiWebInfo" HorizontalAlignment="Left" Height="100" Margin="10,10,10,10" VerticalAlignment="Top" Width="100"/>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:Uid="resAboutRate" Icon="OutlineStar" Label="Rate" Click="bRateIt_Click"  />
            <!--<AppBarButton x:Uid="resAboutFeed" Icon="Comment" Label="Feedback" Click="bFeedback_Click" />-->
            <AppBarSeparator/>
            <AppBarButton Icon="Accept" Label="Ok" Click="bAboutOk_Click"/>
            <AppBarSeparator/>
        </CommandBar>

    </Page.BottomAppBar>

</Page>
